<Window x:Class="AgeIndicator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgeIndicator"
        mc:Ignorable="d"
        Title="MainWindow" Height="25" Width="475" MinHeight="25" 
        MinWidth="475" MaxHeight="25" MaxWidth="475" WindowStyle="None"
        WindowState="Normal" WindowStartupLocation="Manual" Background="Black"
        AllowsTransparency="True" Opacity="0.5" MouseDown="Window_MouseDown" ShowInTaskbar="False"
        Topmost="True" MouseRightButtonUp="Window_MouseRightButtonUp">
    <Grid>
        <TextBlock Foreground="LimeGreen" Text="{Binding Age}" FontSize="16" FontWeight="ExtraBold"></TextBlock>
    </Grid>
</Window>
